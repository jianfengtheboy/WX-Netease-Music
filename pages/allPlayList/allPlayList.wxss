/* pages/allPlayList/allPlayList.wxss */
page {
      background-color: #1E1D1F;
}

.all_playlist-container {
      width: 100%;
      background-color: #1E1D1F;
}

.all_playlist-container .head {
      position: relative;
      overflow: hidden;
      width: 100%;
      height: 320rpx;
      z-index: 10;
}

.all_playlist-container .head .bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      filter: blur(20px);
}

.all_playlist-container .head .bg image {
      width: 100%;
      height: 100%;
}

.all_playlist-container .head .content-wrapper {
      position: relative;
      padding: 40rpx 25rpx;
}

.all_playlist-container .head .content-wrapper .avatar {
      display: inline-block;
}

.all_playlist-container .head .content-wrapper .avatar image {
      width: 255rpx;
      height: 255rpx;
      border-radius: 10rpx;
}

.all_playlist-container .head .content-wrapper .content {
      display: inline-block;
      vertical-align: top;
      padding: 25rpx 0 25rpx 25rpx;
}

.all_playlist-container .head .content-wrapper .content .name {
      display: -webkit-box;
      word-break: break-all;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
      overflow: hidden;
      text-overflow: ellipsis;
      width: 410rpx;
      margin-bottom: 20rpx;
      font-size: 32rpx;
      color: #fafafa;
}

.all_playlist-container .head .content-wrapper .content .desc {
      display: -webkit-box;
      word-break: break-all;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 3;
      overflow: hidden;
      text-overflow: ellipsis;
      width: 410rpx;
      font-size: 24rpx;
      color: #fafafa;
}

.all_playlist-container .listBox {
      padding: 20rpx 0;
}

.all_playlist-container .listBox .list{
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      color: #767676;
}